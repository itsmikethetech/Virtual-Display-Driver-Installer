                                <MenuFlyout>
                                    <MenuFlyoutItem Text="1920x1080"/>
                                    <MenuFlyoutItem Text="2560x1440"/>
                                    <MenuFlyoutItem Text="3840x2160"/>
                                </MenuFlyout>
                            </DropDownButton.Flyout>
                        </DropDownButton>
                        <TextBlock Grid.Row="0" Grid.Column="1" Margin="10,10,0,0">Refresh Rate</TextBlock>
                        <NumberBox Grid.Row="1" Grid.Column="1" x:Name="NumberBoxSpinButtonPlacementExample" Value="60" SpinButtonPlacementMode="Compact" SmallChange="1" LargeChange="10" Margin="10,10,10,10"/>
