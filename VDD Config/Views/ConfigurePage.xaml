<Page
    x:Class="VDD_Config.Views.ConfigurePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" ColumnDefinitions="Auto, 200px, Auto" RowDefinitions ="Auto, Auto, Auto">
        
        <!-- To create this sample, add/change the following properties onto the code for the base example above: -->

        <Expander Grid.Column="0" Grid.Row="0" x:Name="Expander10" HorizontalAlignment="Left" IsExpanded="True" Header="Number of Displays" VerticalAlignment="Top" IsEnabled="True" Margin="10,10,10,10">
            <Expander.Content>
                <ListView SelectionMode="Single" SelectedItem="Add 1 Virtual Display">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="0,0,0,0" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.Items>
                        <TextBlock>Add 1 Virtual Display</TextBlock>
                        <TextBlock>Add 2 Virtual Displays</TextBlock>
                        <TextBlock>Add 3 Virtual Displays</TextBlock>
                        <TextBlock>Add 4 Virtual Displays</TextBlock>
                        <TextBlock>Add 5 Virtual Displays</TextBlock>
                    </ListView.Items>
                </ListView>
            </Expander.Content>
        </Expander>

        <Expander Grid.Column="1" Grid.Row="0" x:Name="Expander8" HorizontalAlignment="Left" IsExpanded="True" Header="Resolution" VerticalAlignment="Top" IsEnabled="True" Margin="10,10,10,10">
            <Expander.Content>
                <ListView SelectionMode="Multiple">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="0,0,0,0" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.Items>
                            <TextBlock>352x240</TextBlock>
                            <TextBlock>480x360</TextBlock>
                            <TextBlock>858x480</TextBlock>
                            <TextBlock>1280x720</TextBlock>
                            <TextBlock>1920x1080</TextBlock>
                            <TextBlock>2560x1080</TextBlock>
                            <TextBlock>3440x1440</TextBlock>
                            <TextBlock>1920x1200</TextBlock>
                            <TextBlock>3840x2160</TextBlock>
                            <TextBlock>3840x1600</TextBlock>
                        </ListView.Items>
                </ListView>
            </Expander.Content>
        </Expander>

        <Expander Grid.Column="2" Grid.Row="0" x:Name="Expander9" HorizontalAlignment="Left" IsExpanded="True" Header="Refresh Rate" VerticalAlignment="Top" IsEnabled="True" Margin="10,10,10,10">
            <Expander.Content>
                <ListView SelectionMode="Multiple">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="0,0,0,0" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.Items>
                        <TextBlock>24Hz</TextBlock>
                        <TextBlock>25Hz</TextBlock>
                        <TextBlock>30Hz</TextBlock>
                        <TextBlock>50Hz</TextBlock>
                        <TextBlock>60Hz</TextBlock>
                        <TextBlock>75Hz</TextBlock>
                        <TextBlock>120Hz</TextBlock>
                        <TextBlock>144Hz</TextBlock>
                        <TextBlock>240Hz</TextBlock>
                    </ListView.Items>
                </ListView>
            </Expander.Content>
        </Expander>
        

    </Grid>
</Page>